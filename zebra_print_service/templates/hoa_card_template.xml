<?xml version="1.0" encoding="utf-8" ?>
<template name="HOA_Resident_Card_V2" card_type="pvc" card_thickness="30" source="feeder" destination="eject">
    <fonts>
        <font id="1" name="Arial" size="70" bold="yes" />
        <font id="2" name="Arial" size="20" />
    </fonts>
    <sides>
        <side name="front" orientation="portrait">
            <print_types>
                <print_type type="color">
                    <graphic field="residentPhoto" x="20" y="20" width="600" height="750" />
                </print_type>
                <print_type type="mono">
                    <text field="firstName" font_id="1" x="20" y="840" width="600" height="50" alignment="center" />
                    <text field="lastName" font_id="1" x="20" y="900" width="600" height="50" alignment="center" />
                    <text field="expirationDateText" font_id="2" x="20" y="950" width="600" height="40" alignment="center" />
                </print_type>
            </print_types>
        </side>
    </sides>
</template>
